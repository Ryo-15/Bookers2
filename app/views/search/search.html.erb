<%# 検索結果画面 %>
<%# book検索かuser検索かによって条件を分岐する %>
<div class="container">
  <%# タイトル %>
  <% if @path == 'users' %> <%# 要確認 %>
    <%# user検索の場合 %>
    <h2>Users search for '<%= @word %>'</h2>
  <% else %>
    <%# book検索の場合 %>
    <h2>Books search for '<%= @word %>'</h2>
  <% end %>

  <%# 検索結果テーブル %>
  <table class="table">
    <% if @path == 'users' %> <%# 要確認 %>
      <%# user検索の場合 %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><a><%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size: "40x40" %></a></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <%# book検索の場合 %>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
              <td>
              <%# リンク先はbookに紐付いているユーザーページ %>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size: "40x40" %>
              <% end %>
            </td>
            <td><span><%= link_to book.title, "/books/#{book.id}" %></span></td>
            <td><%= book.body %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>